<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">



        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".BarcodeCompActivity">

            <TextView
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:text="Проверка сертификата"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="left|center"
                android:fontFamily="@font/gilroy"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:paddingLeft="15sp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                android:id="@+id/top"
                android:text="Покупатели нашей продукции по этому сертификату :"
                android:fontFamily="@font/gilroy"
                android:textSize="25sp"
                android:layout_marginTop="15sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Сертификат № : "
                android:id="@+id/Bid"
                android:fontFamily="@font/gilroy"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                app:layout_constraintTop_toBottomOf="@id/top"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Покупатель : "
                android:id="@+id/B1"
                android:fontFamily="@font/gilroy"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                app:layout_constraintTop_toBottomOf="@id/Bid"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Покупатель : "
                android:id="@+id/B2"
                android:fontFamily="@font/gilroy"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                app:layout_constraintTop_toBottomOf="@id/B1"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Покупатель : "
                android:id="@+id/B3"
                android:fontFamily="@font/gilroy"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                app:layout_constraintTop_toBottomOf="@id/B2"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Покупатель : "
                android:id="@+id/B4"
                android:fontFamily="@font/gilroy"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                app:layout_constraintTop_toBottomOf="@id/B3"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Вы покупаете продукцию у одного из представленных покупателей? "
                android:id="@+id/correct"
                android:fontFamily="@font/gilroy"
                android:textSize="25sp"
                android:textStyle="italic"
                android:layout_marginTop="15sp"
                app:layout_constraintTop_toBottomOf="@id/B4"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                />
            <Button
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerstrue"
                app:layout_constraintTop_toBottomOf="@id/correct"
                android:id="@+id/butTrueB"
                android:text="ДА"
                android:textSize="20sp"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="35sp"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Button
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:background="@drawable/cornersfalse"
                app:layout_constraintTop_toBottomOf="@id/correct"
                android:id="@+id/butFalseB"
                android:text="Нет"
                android:textSize="20sp"
                android:layout_marginTop="25sp"
                android:layout_marginRight="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

